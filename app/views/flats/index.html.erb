<div class="container">
  <h1> Discover Our Flats(<%= Flat.count %>)</h1>
  <%= link_to("Add Flat", new_flat_path) %>
  <div class="cards">
    <% @flats.each do |flat| %>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= link_to(flat.name, flat_path(flat)) %></h5>
        <p class="card-text"><%= flat.address %></p>
        <div class="describe d-flex">
            <p><%= flat.number_of_guests %> <i class="fas fa-user-friends"></i> </p>
            <p><%= flat.price_per_night %> <i class="fas fa-euro-sign"></i> </p>
        </div>
      </div>
      <div class="card-footer">
        <%= link_to "More info", flat_path(flat) %>
        <%= link_to "Edit", edit_flat_path(flat) %>
        <%= link_to("Remove", flats_path(flat), method: :delete) %>
      </div>
    </div>
    <% end %>
  </div>
</div>